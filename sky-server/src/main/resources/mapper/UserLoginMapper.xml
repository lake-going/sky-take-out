<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.UserLoginMapper">
    <insert id="createUser" useGeneratedKeys="true" keyProperty="id">
        insert into user(id, openid,create_time) values (null,#{openid},#{createTime})
    </insert>


    <select id="queryByOpenId" resultType="com.sky.entity.User">
        select * from user where openid = #{openId}
    </select>
    <select id="queryById" resultType="com.sky.entity.User">
        select * from user where user.id = #{currentId}
    </select>
    <select id="queryUserByData" resultType="java.lang.Integer">
        select count(*) from user where create_time between #{begin} and #{end}
    </select>
    <select id="queryTotalUserByData" resultType="java.lang.Integer">
        select count(*) from user where #{end} > create_time
    </select>
    <select id="countByMap" resultType="java.lang.Integer">
        select count(*) from user where create_time between #{begin} and #{end}
    </select>
</mapper>